@model IEnumerable<BlessingMovies.Models.Movie>

@{
    ViewData["Title"] = "My Movies";
}

<h1 class="mb-4">My Movies</h1>

<!-- Search Form -->
<form asp-action="Index" method="get" class="mb-4 d-flex gap-2 align-items-center">
    <input type="text" 
           name="searchString" 
           value="@ViewData["SearchString"]" 
           placeholder="Search by title"
           class="form-control w-auto" />

    <input type="number" 
           name="searchYear" 
           value="@ViewData["SearchYear"]" 
           placeholder="Year or newer"
           class="form-control w-auto" />

    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Create" class="btn btn-success">Add Movie</a>
</form>

<!-- Movie Table -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Rating</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
