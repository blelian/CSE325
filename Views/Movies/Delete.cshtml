@model BlessingMovies.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h1 class="mb-4">Delete Movie</h1>

<h4>Are you sure you want to delete this movie?</h4>
<div class="mb-3">
    <strong>Title:</strong> @Model.Title
</div>
<div class="mb-3">
    <strong>Genre:</strong> @Model.Genre
</div>
<div class="mb-3">
    <strong>Year:</strong> @Model.Year
</div>
<div class="mb-3">
    <strong>Rating:</strong> @Model.Rating
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
